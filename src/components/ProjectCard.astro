---
import "@fontsource-variable/inter";

const { projectName, url } = Astro.props;
---

<a
  href={url}
  class="border border-[#E1E4E8] p-[15px] w-[160px] h-[160px] flex flex-col justify-between rounded-[20px] hover:transition-all"
  id="card"
>
  <div class="flex flex-row items-start justify-between">
    <slot name="logo" />
    <slot name="stack" />
  </div>
  <div class="flex flex-col">
    <h4 class="font-[Inter Variable] text-[16px] mb-1">{projectName}</h4>
    <slot name="description" />
  </div>
</a>

<style>
  #card {
    box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.1);
  }

  #card:hover {
    box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.15);
  }
</style>
